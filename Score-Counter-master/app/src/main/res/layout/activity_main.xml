<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Welcome!!! " />

    <info.hoang8f.widget.FButton
        android:id="@+id/buttonA"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:text="Team A"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <info.hoang8f.widget.FButton
        android:id="@+id/buttonB"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:text="Team B"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/coin"
        android:layout_width="219dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/heads" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:backgroundTint="#0575E6"
        android:text="Flip Coin" />

    <Button
        android:id="@+id/googleid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00F260"
        android:text="Player Stats" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="*Requires Internet" />


</LinearLayout>